<div class="row">
  <div class="col-xs-8 col-sm-10 col-md-10">
    <h1>PicStories</h1>
  </div>
  <div class="col-xs-4 col-sm-2 col-md-2">
    <%= link_to 'New story', new_story_path, class: "btn btn-info btn-sm" %>
  </div>
</div>

<% if current_user%>

  <div class="row">
    <% @stories.reverse.each do |story| %>
      <% if current_user.admin == true %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <%= link_to(image_tag(story.picture), story) if story.picture? %>
            <div class="caption">
              <h3><%= story.title %></h3>
              <small><%= time_ago_in_words(story.created_at) %> ago</small>
              <p><%= story.content.truncate(150)  %></p>
              <p><%= link_to 'Show', story, class: "btn btn-primary" %> <%= link_to 'Edit', edit_story_path(story), class: "btn btn-warning" %> <%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
            </div>
          </div>
        </div>
      <% elsif story.user_id == current_user.id %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <%= link_to(image_tag(story.picture), story) if story.picture? %>
            <div class="caption">
              <h3><%= story.title %></h3>
              <small><%= time_ago_in_words(story.created_at) %> ago</small>
              <p><%= story.content.truncate(150)  %></p>
              <p><%= link_to 'Show', story, class: "btn btn-primary" %> <%= link_to 'Edit', edit_story_path(story), class: "btn btn-warning" %> <%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
            </div>
          </div>
        </div>
      <% elsif%>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <%= link_to(image_tag(story.picture), story) if story.picture? %>
            <div class="caption">
              <h3><%= story.title %></h3>
              <small><%= time_ago_in_words(story.created_at) %> ago</small>
              <p><%= story.content.truncate(150)  %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

<% else %>

  <div class="row">
    <% @stories.reverse.each do |story| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= link_to(image_tag(story.picture), story) if story.picture? %>
          <div class="caption">
            <h3><%= story.title %></h3>
            <small><%= time_ago_in_words(story.created_at) %> ago</small>
            <p><%= story.content.truncate(150)  %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <hr/>
  <p>You can log as admin with email: admin@gmail.com password: 123123</p>

<% end %>


