<div class="my-2 bg-success text-white">
    <h1 class="display-1 text-center">Users</h1>
</div>
<br>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.admin %></td>
            <td>
                <%= button_to 'Change status', change_path(user.id), method: :patch %>
            </td>
            </tr>
        <% end %>
    </tbody>
</table>
<br>